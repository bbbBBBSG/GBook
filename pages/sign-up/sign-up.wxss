.container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    padding: 0 80rpx;
}

.logo-container {
    text-align: center;
}

.logo {
    width: 200rpx;
    height: 200rpx;
}

.input-username,
.input-password {
    width: 100%;
    height: 80rpx;
    border: 1rpx solid silver;
}

.input-password {
    margin-top: 20rpx;
}

.btn-sign-up {
    margin-top: 20rpx;
}